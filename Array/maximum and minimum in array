#include <stdio.h>
int main(){
    int arr[100],n,i;
    int max_index=0,min_index=0;
    
    printf("enter number of elements in the array:");
    scanf("%d",&n);
    
     printf("Enter the elements of the array:");
    for(i=0;i<n;i++){
        scanf("%d",&arr[i]);
    }
    int max=arr[0],min=arr[0];
    for(i=0;i<n;i++){
        if(arr[i]>max){
        max=arr[i];
        max_index=i;
        }
        if(arr[i]<min){
        min=arr[i];
        min_index=i;
        }
        
    }
    
    printf("Greatest element of array is %d at index %d\n",max,max_index);
    printf("Smallest element of array is %d at index %d",min,min_index);
    
    return 0;
}
    
    
    
