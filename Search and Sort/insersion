#include<stdio.h>
int main(){
    int arr[]={3,5,4,7,8,1};
    int i,j,k,temp;
    
    for(i=1;i<6;i++){
        for(j=0;j<i;j++){
            if(arr[i]<arr[j]){
                temp = arr[i];
                for(k=i-1;k>=j;k--){
                    arr[k+1]=arr[k];
                }
                arr[j]=temp;
                break;
            }
        }
        
    }
    printf("Array in sorted order is:\n");
    for(i=0;i<6;i++){
        printf(" %d ",arr[i]);
    }
return 0;
}
